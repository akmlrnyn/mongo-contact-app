<div class="conainer mt-3">
    <div class="row">
        <div class="col-md-8">
            <% if (!nama) { %>
            <div class="alert alert-danger" role="alert">
                Tidak ada kontak <a href="/contact" class="alert-link">&laquo; Kembali ke contact</a>
            </div>
            <% } else {%>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
                    <p class="card-text"><%= contact.email %></p>
                    <a href="/contact" class="card-link">&laquo; Kembali</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>