<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Datftar Contact</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">Tambah data contact</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
      <% } %>

      <table class="table">

        <% if (contacts.length < 1) { %>
        <div class="alert alert-danger" role="alert">
          Data Contact Kosong. <a href="/" class="alert-link">Kembali ke Home</a>
        </div>
        <% } %>
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach(contact => { %>
          <tr>
            <th scope="row"></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a href="/contacts/<%= contact.nama %>" class="btn btn-success badge rounded"><i
                  class="bi bi-info-circle"></i> Detail</a>
                  <a href="/contacts/edit/<%= contact.nama %>" class="btn btn-danger badge rounded" onclick="return confirm('Apakah anda yakin?')">Hapus</a>
                  <a href="" class="btn btn-warning badge rounded">Ubah</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>